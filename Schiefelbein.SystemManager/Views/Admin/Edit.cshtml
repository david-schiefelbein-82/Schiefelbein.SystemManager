@model Schiefelbein.SystemManager.Models.AuthEntityViewModelWithError

<h4>Edit User/Group</h4>
<div class="row">
    <div class="col-md-4">
        &nbsp;
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <input id="org-id" name="origId" class="form-control" type="hidden" value="@Model.Id" />
            <input id="org-type" name="origType" class="form-control" type="hidden" value="@Model.Type" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" required="true" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" required="true" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <label asp-for="Type" class="control-label"></label>
                @Html.DropDownListFor(model => model.Type, new SelectList(Enum.GetNames(typeof(Schiefelbein.Common.Web.Configuration.AuthEntityType))), new { @class = "form-select" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ServerMonitor" /> @Html.DisplayNameFor(model => model.ServerMonitor)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ServiceController" /> @Html.DisplayNameFor(model => model.ServiceController)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Admin" /> @Html.DisplayNameFor(model => model.Admin)
                </label>
            </div>
            <div>
                <input type="button" value="Cancel" class="btn btn-secondary my-2" onclick='location.href = "@Url.Action("Index", "Admin")"' />
                <input type="submit" value="Save" class="btn btn-primary my-2" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        &nbsp;
    </div>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="error-message">
        <div class="my-2 text-center">
            <div class="toast fade show toast-login-msg" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#FF7a7a"></rect></svg>
                    <strong class="me-auto">Edit Error</strong>
                    <small>Just now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @Model.ErrorMessage
                </div>
            </div>
        </div>
    </div>
}