@model Schiefelbein.SystemManager.Models.AuthEntityViewModelWithError

<h3>Are you sure you want to delete this User?</h3>
<div>
    <form asp-action="Delete">
        <div class="form-group my-2">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" readonly="true" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Label" class="control-label"></label>
            <input asp-for="Label" class="form-control" readonly="true" />
        </div>
        <div class="form-group my-2">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" readonly="true" />
        </div>

        <div class="my-2">
            <input type="button" value="Cancel" class="btn btn-secondary my-2" onclick='location.href = "@Url.Action("Index", "Admin")"' />
            <input type="submit" value="Delete" class="btn btn-danger my-2" />
        </div>
    </form>
</div>
@if (Model != null && Model.ErrorMessage != null)
{
    <div class="error-message">
        <div class="my-2 text-center">
            <div class="toast fade show toast-login-msg" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <svg class="bd-placeholder-img rounded me-2" width="20" height="20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" preserveAspectRatio="xMidYMid slice" focusable="false"><rect width="100%" height="100%" fill="#FF7a7a"></rect></svg>
                    <strong class="me-auto">Edit Error</strong>
                    <small>Just now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @Model.ErrorMessage
                </div>
            </div>
        </div>
    </div>
}
